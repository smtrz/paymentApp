<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tahir.paymentApp">

    <application
        android:name="com.tahir.paymentApp.config.AppConfig"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SwitchChallenge">
        <activity
            android:name="com.tahir.paymentApp.activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.tahir.paymentApp.activities.PayNow"></activity>
        <activity android:name="com.tahir.paymentApp.activities.Payments"></activity>
        <activity android:name="com.tahir.paymentApp.activities.RefundRequest"></activity>
        <activity android:name="com.tahir.paymentApp.activities.RefundList"></activity>
    </application>

</manifest>